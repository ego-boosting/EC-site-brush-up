  <div class="continer">
    <div class="d-flex justify-content-center">
      <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class="col">
      <%= f.file_field :image %>
      </div>
      <div class="col">
      <%= f.text_field :name %>
      </div>
      <div class="col">
      <%= f.text_field :introduction %>
      </div>
      <div class="col">
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>
      <div class="col">
      <%= f.text_field :without_tax %>
      </div>
      <div class="col">
      <%= f.radio_button :is_active, true %>
      </div>
      <div class="col">
      <%= f.radio_button :is_active, false %>
      </div>
      <div class="col">
      <%= f.submit %>
      </div>
      <% end %>
    </div>
  </div>